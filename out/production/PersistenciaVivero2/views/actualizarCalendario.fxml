            <TableColumn fx:id="lunesColumn" prefWidth="50.0" text="Lun" />
            <TableColumn fx:id="martesColumn" prefWidth="50.0" text="Mar" />
            <TableColumn fx:id="miercolesColumn" prefWidth="50.0" text="Mie" />
            <TableColumn fx:id="juevesColumn" prefWidth="50.0" text="Jue" />
            <TableColumn fx:id="viernesColumn" prefWidth="50.0" text="Vie" />
            <TableColumn fx:id="sabadoColumn" prefWidth="50.0" text="Sab" />
            <TableColumn fx:id="domingoColumn" minWidth="0.0" prefWidth="50.0" text="Dom" />
         </columns>
      </TableView>
      <CheckBox fx:id="ckLunes" layoutX="90.0" layoutY="130.0" mnemonicParsing="false" onMouseClicked="#ckLunesOMC" text="Lunes" />
      <CheckBox fx:id="ckMartes" layoutX="90.0" layoutY="180.0" mnemonicParsing="false" onMouseClicked="#ckMartesOMC" text="Martes" />
      <CheckBox fx:id="ckMiercoles" layoutX="90.0" layoutY="230.0" mnemonicParsing="false" onMouseClicked="#ckMiercolesOMC" text="Miercoles" />
      <CheckBox fx:id="ckJueves" layoutX="240.0" layoutY="130.0" mnemonicParsing="false" onMouseClicked="#ckJuevesOMC" text="Jueves" />
      <CheckBox fx:id="ckViernes" layoutX="240.0" layoutY="180.0" mnemonicParsing="false" onMouseClicked="#ckViernesOMC" text="Viernes" />
      <CheckBox fx:id="ckSabado" layoutX="240.0" layoutY="230.0" mnemonicParsing="false" onMouseClicked="#ckSabadoOMC" text="Sabado" />
      <CheckBox fx:id="ckDomingo" layoutX="390.0" layoutY="130.0" mnemonicParsing="false" onMouseClicked="#ckDomingoOMC" text="Domingo" />
      <TextField fx:id="textFieldIDProducto" layoutX="390.0" layoutY="230.0" />
      <Label fx:id="labelIDProducto" layoutX="432.0" layoutY="207.0" text="ID Producto" />
   </children>
