<AnchorPane fx:id="anchorPaneActualizarCalendario" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: cyan;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.actualizarCalendarioController">
   <children>
      <Label layoutX="216.0" layoutY="28.0" text="Actualizar Calendario">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TextField fx:id="textFieldBusqueda" layoutX="139.0" layoutY="79.0" prefHeight="26.0" prefWidth="250.0" promptText="Ingrese ID de Calendario" />
      <Button fx:id="botonBuscar" layoutX="390.0" layoutY="79.0" mnemonicParsing="false" onMouseClicked="#botonBuscarOMC" prefHeight="26.0" prefWidth="60.0" text="Buscar" />
